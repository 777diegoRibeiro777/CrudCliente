@model CrudCliente.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-4 mt-10px text-center">Apagar</h1>

<h3 class="text-center">Voçê tem certeza que deseja apagar essas informações?</h3>
<div>
    <hr />
    <dl class="row d-flex justify-content-center">
        <dt class="d-flex justify-content-center">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="d-flex justify-content-center">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="d-flex justify-content-center mt-3">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="d-flex justify-content-center">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="d-flex justify-content-center mt-3">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd class="d-flex justify-content-center">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
        <dt class="d-flex justify-content-center mt-3">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="d-flex justify-content-center">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="d-flex justify-content-around mt-5">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger shadow" />
        <a asp-action="Index" class="btn btn-primary shadow">⬅️ Voltar</a>
    </form>
</div>
